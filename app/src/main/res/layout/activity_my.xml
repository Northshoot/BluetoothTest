<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MyActivity">

    <TextView
        android:id="@+id/bluetooth_state_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/adv_start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_text"
        android:onClick="handleStartClick"
        android:enabled="true"/>

    <Button
        android:id="@+id/adv_stop_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stop_text"
        android:onClick="handleStopClick"
        android:enabled="false"/>

    <Button
        android:id="@+id/scan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_text"
        android:onClick="handleScanStart"
        android:enabled="true" />

    <Button
        android:id="@+id/scan_stop_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_stop_text"
        android:onClick="handleScanStop"
        android:enabled="false" />

    <ListView
        android:id="@+id/devicesfound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
